\begin_layout Standard
\begin_inset Formula 
\begin{eqnarray}
\frac{D}{L-Z} & = & \frac{\overline{M_{P}^{\prime}M_{C}^{\prime}}}{Z}\label{eq:sim-tri:D/(L-Z)}\\
Z & = & \frac{L\cdot\overline{M_{P}^{\prime}M_{C}^{\prime}}}{D+\overline{M_{P}^{\prime}M_{C}^{\prime}}}\label{eq:Z-def}
\end{eqnarray}

\end_inset


